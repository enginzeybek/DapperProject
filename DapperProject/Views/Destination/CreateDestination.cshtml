@model CreateDestinationDto
@{
    ViewData["Title"] = "CreateDestination";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav>
    <div class="align-content-center">
        <div class="container">
            <div class="row">
                <b>HARİTADAN İSTEDİĞİNİZ DESTİNASYONA BİR GÖZ ATTIN.</b>
            </div>
            <div class="row">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d317716.6064073197!2d-0.43123970044350396!3d51.52860701956136!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2zTG9uZHJhLCBCaXJsZcWfaWsgS3JhbGzEsWs!5e0!3m2!1str!2str!4v1736202973773!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</nav>
<div class="content">
    <div class="container">
        <div class="col-12">
            <div class="grid">
                <form method="post">
                    <div class="grid-item">
                        <label for="destinationCity">TUR ŞEHRİ</label>
                        <input id="destinationCity" asp-for="destinationCity" type="text" />
                    </div>
                    <br />
                    <hr />
                    <div class="grid-item">
                        <label for="guideId">TUR REHBERİ ID</label>
                        <input id="guideId" asp-for="guideId" type="text" />
                    </div>
                    <br />
                    <hr />
                    <div class="card-action">
                        <button type="submit" class="btn btn-danger">EKLE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

