@model List<ResultGuideDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-header">
                <span>REHBER TABLOSU</span>
            </div>
            <div class="card-body bg-gradient">
                <table class="table border-5 border-dark p-1 m-1 table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rehber İSMİ</th>
                            <th>GÜNCELLE</th>
                            <th>SİL</th>
                        </tr>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.guideId</td>
                                    <td>@item.guideName</td>
                                    <td><a class="btn btn-info border-5" href="/Guide/UpdateGuide/@item.guideId/">GÜNCELLE</a></td>
                                    <td><a class="btn btn-danger border-5" href="/Guide/DeleteGuide/@item.guideId/">SİL</a></td>
                                </tr>
                            }
                        }
                    </thead>
                </table>
            </div>
            <div>
                <a href="/Guide/CreateGuide/" class="btn btn-success">EKLE</a>
            </div>
        </div>
    </div>
</div>

